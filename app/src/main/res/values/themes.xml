<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.MyProfile" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowActivityTransitions">true</item>

        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:colorBackgroundCacheHint">@null</item>

        <item name="android:windowEnterTransition">@anim/slide_in_up</item>
        <item name="android:windowExitTransition">@anim/fade_out_activity</item>
        <item name="android:windowReenterTransition">@anim/fade_in_activity</item>
        <item name="android:windowReturnTransition">@anim/slide_out_down</item>
    </style>

    <style name="Theme.MyProfile" parent="Base.Theme.MyProfile" />
</resources>